<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/marker_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@drawable/ic_current_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/marker_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/marker_icon"
        app:layout_constraintTop_toTopOf="@id/marker_icon"
        app:layout_constraintBottom_toBottomOf="@id/marker_icon"
        app:layout_constraintEnd_toStartOf="@+id/marker_imageview">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/marker_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/suva_gray"
            tools:text="My Current Location"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/marker_latlng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/eclipse_black"
            tools:text="24.937596, 121.021746"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/marker_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/marker_icon"
        app:layout_constraintBottom_toBottomOf="@+id/marker_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>